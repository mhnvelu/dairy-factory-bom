<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.4.5</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>com.spring.microservices</groupId>
    <artifactId>dairy-factory-bom</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>dairy-factory-bom</name>
    <description>Spring Boot Microservices with Spring Cloud</description>

    <!--Packaging has to POM-->
    <packaging>pom</packaging>

    <developers>
        <developer>
            <name>Mohanavelu Subramanian</name>
            <roles>
                <role>Software Engineer</role>
            </roles>
        </developer>
    </developers>


    <!--Either these properties are added if not present in parent POM or override the values if
    already present in parent POM-->
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>11</java.version>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <org.mapstruct.version>1.4.2.Final</org.mapstruct.version>
    </properties>
</project>
